@using ELearning.Business.DTOs.CourseDTOs

@model IQueryable<StudentEnrolledViewModel>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">UI elements /</span> Collapse</h4>
    @foreach(var item in Model)
    {
       
    <div class="col-12">
        <div class="card mb-4">
            <h5 class="card-header">@item.CourseName</h5>
            <div class="card-body">
                <p class="demo-inline-spacing">
                    <button class="btn btn-primary me-1"
                            type="button"
                            data-bs-toggle="collapse"
                                data-bs-target="#@("collapseExample" + item.CourseId)"
                            aria-expanded="false"
                            aria-controls="collapseExample">
                        Xem học viên
                    </button>
                </p>
                    <div class="collapse" id="@( "collapseExample" + item.CourseId )">
                    
                            @foreach (var stu in item.StudentEnrolled)
                        {
                            <div class="d-grid d-sm-flex p-3 border row">
                                <h6 class="col-lg-4">@stu.StudentName</h6>
                                <div class="progress col-lg-8">
                                    <div class="col-lg-8 progress-bar progress-bar-striped progress-bar-animated bg-primary"
                                         role="progressbar"
                                         style="width: 20%"
                                         aria-valuenow="20"
                                         aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            </div>
                            }
                        
                </div>
                
            </div>
        </div>
    </div>
    }
</div>