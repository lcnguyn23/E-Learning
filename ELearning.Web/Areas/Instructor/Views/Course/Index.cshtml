@model CourseViewModel
@{
    ViewData["Title"] = "Khóa học của tôi";
    ViewData["Active"] = "Course";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Khóa học của tôi /</span></h4>
    <!-- Striped Rows -->
    <div class="card">
        <h5 class="card-header">Danh sách khóa học</h5>
        
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên khóa học</th>
                        <th>Chủ đề</th>
                        <th>Cấp độ</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model.Courses)
                    {
                        <tr>
                            <td>
                                <span class="fw-medium">@i</span>
                            </td>
                            <td>
                                <span class="fw-medium">@item.CourseName</span>
                            </td>
                            @foreach (var topic in Model.Topics)
                            {
                                if (item.TopicId == topic.TopicId)
                                {
                                    <td><span class="fw-medium">@topic.TopicName</span></td>
                                }
                            }
                            @foreach (var level in Model.Levels)
                            {
                                if (item.LevelId == level.LevelId)
                                {
                                    <td><span class="fw-medium">@level.LevelName</span></td>
                                }
                            }
                            <td><span class="badge bg-label-success me-1">@item.Status</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        i++;
                        
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Striped Rows -->
</div>