@using ELearning.DomainModels.EnrollmentManagement;
@model List<EnrollCourseListViewModel>


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">
            <a asp-action="Index" asp-controller="Course" style="text-decoration: none;">@ViewBag.Title</a>
        </span>
    </h4>
    <div class="card">
        <h5 class="card-header">@ViewBag.Title</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên khóa học</th>
                        <th>Ngày đăng ký</th>
                        <th>Giảng viên</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @{
                        int i = 1;}
                       
                      @foreach (var item in Model)
                      {
                          <tr>
                              <td>
                                  <span class="fw-medium">@i</span>
                              </td>
                              <td>
                                  <span class="fw-medium">@item.CourseName</span>
                              </td>
                              <td>@string.Format("{0:dd/MM/yyyy}", item.EnrollAt)</td>
                              <td>
                                  <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                      <li data-bs-toggle="tooltip"
                                          data-popup="tooltip-custom"
                                          data-bs-placement="top"
                                          class="avatar avatar-xs pull-up"
                                          title="@item.InstructorName">
                                          <img src="~/media/avatar/11.png" alt="Avatar" class="rounded-circle" />
                                      </li>
                                    
                                  </ul>
                              </td>
                              @if (item.EnrollmentStatus.Equals(EnrollmentStatus.ENROLLED))
                              {
                                  <td><span class="badge bg-label-info me-1">@item.EnrollmentStatus</span></td>
                              }
                              @if (item.EnrollmentStatus.Equals(EnrollmentStatus.IN_PROGRESS))
                              {
                                  <td><span class="badge bg-label-primary me-1">@item.EnrollmentStatus</span></td>
                              }
                              @if (item.EnrollmentStatus.Equals(EnrollmentStatus.COMPLETED))
                              {
                                  <td><span class="badge bg-label-success me-1">@item.EnrollmentStatus</span></td>
                              }
                              
                          </tr>
                          i++;
                     }
                    
                   
                </tbody>
            </table>
        </div>
    </div>
</div>